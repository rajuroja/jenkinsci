<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug">
	<Properties>
		<Property name="log-path">/u01/apps/TST/TM_WMS_APP_LOG/log/$${date:yyyy}/$${date:MM}/$${date:dd}</Property>
		<Property name="trace-file-path">/u01/apps/TST/TM_WMS_APP_LOG/performanceLog/$${date:yyyy}/$${date:MM}/$${date:dd}</Property>
		<Property name="webService-file-path">/u01/apps/TST/TM_WMS_APP_LOG/externalService/$${date:yyyy}/$${date:MM}/$${date:dd}</Property>
		<Property name="log-filename">log</Property>
		<Property name="trace-filename">performanceLog</Property>
		<Property name="webService-filename">externalService</Property>
	</Properties>
	
	<Appenders>
	   <RollingFile name="file-log" fileName="${log-path}/${log-filename}.log"
			filePattern="${log-path}/${log-filename}.%i.log">
			<PatternLayout pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %C{1} [%M] - %replace{%msg}{[\n\r]+}{}%n" />
			<Policies>
    			<SizeBasedTriggeringPolicy size="50 MB" />
			</Policies>
			<DefaultRolloverStrategy fileIndex="nomax" />
		</RollingFile>
	   
		<RollingFile name="performanceLog" fileName="${trace-file-path}/${trace-filename}.log"
			filePattern="${trace-file-path}/${trace-filename}.%i.log.zip">
			<PatternLayout pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} [%M] - %replace{%msg}{[\n\r]+}{}%n" />
			<Policies>
				<SizeBasedTriggeringPolicy size="50 MB"/>
			</Policies>
			<DefaultRolloverStrategy fileIndex="nomax" />
		</RollingFile>

		<RollingFile name="externalService" fileName="${webService-file-path}/${webService-filename}.log"
			filePattern="${webService-file-path}/${webService-filename}.%i.log.zip">
			<PatternLayout pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} [%M] - %replace{%msg}{[\n\r]+}{}%n" />
			<Policies>
				<SizeBasedTriggeringPolicy size="50 MB" />
			</Policies>
			<DefaultRolloverStrategy fileIndex="nomax" />
		</RollingFile>

		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{10}:%M || %replace{%msg}{[\n\r]+}{}%n" />
		</Console>
	</Appenders>

	<Loggers>
		<logger name="org.springframework" level="error"
			additivity="false">
			<appender-ref ref="console" level="info" />
			<appender-ref ref="file-log" level="error" />
		</logger>
		<logger name="org.apache" level="error" additivity="false">
			<appender-ref ref="console" level="error" />
			<appender-ref ref="file-log" level="error" />
		</logger>
		<logger name="org.hibernate" level="error" additivity="false">
			<appender-ref ref="console" level="error" />
			<appender-ref ref="file-log" level="error" />
		</logger>
		<AsyncLogger name="com.dpworld" level="debug"
			additivity="false" includeLocation="true">
			<appender-ref ref="console" level="debug" />
			<appender-ref ref="file-log" level="debug" />
		</AsyncLogger>
		<Root level="info" includeLocation="true">
			<appender-ref ref="console" level="info" />
			<appender-ref ref="file-log" level="info" />
		</Root>
		<logger
			name="org.springframework.aop.interceptor.PerformanceMonitorInterceptor"
			level="trace">
			<appender-ref ref="performanceLog" level="trace" />
		</logger>
		<logger
			name="com.dpworld.yardapp.common.utils.WebserviceUtility"
			level="trace">
			<appender-ref ref="externalService" level="trace" />
		</logger>
	</Loggers>
</Configuration>